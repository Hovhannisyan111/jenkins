pipeline {
    agent any

    environment {
        DEPLOY_APPROVED = "false"
    }

    stages {

        stage('Build') {
            steps {
                echo "Building..."
            }
        }

        stage('Approval') {
            steps {
                script {
                    try {
                        timeout(time: 2, unit: 'MINUTES') {
                            def userChoice = input(
                                message: 'Deploy application?',
                                parameters: [
                                    choice(
                                        name: 'Deploy',
                                        choices: ['Yes', 'No'],
                                        description: 'Select Yes to deploy'
                                    )
                                ]
                            )

                            if (userChoice == 'Yes') {
                                env.DEPLOY_APPROVED = "true"
                            } else {
                                echo "Deployment skipped by user."
                            }
                        }
                    } catch (err) {
                        echo "No input received. Skipping deployment."
                    }
                }
            }
        }

        stage('Deploy') {
            when {
                expression { env.DEPLOY_APPROVED == "true" }
            }
            steps {
                echo "Deploying..."
            }
        }
    }
}
